@page "/servers"

<h3>Servers</h3>

<br/>

@foreach (var city in cities)
{
    <button type="button" class="btn btn-primary me-2 mb-2">@city</button>
}

<ul>
    @foreach(var server in servers)
    {
        <li>@server.Name in @server.City is <span style="color:@(server.IsOnline ? "green" : "red")">@(server.IsOnline ? "online" : "offline")</span></li>
    }
</ul>


    @code {

        private List<Server> servers = ServersRepository.GetServersByCity("Toronto");

        private List<string> cities = CitiesRepository.GetCities();
}
